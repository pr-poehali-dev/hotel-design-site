{
  "tests": [
    {
      "name": "Login with valid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "admin",
        "password": "admin123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "user": {
          "username": "admin"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with invalid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "admin",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "success": false
      },
      "bodyMatcher": "partial"
    }
  ]
}
