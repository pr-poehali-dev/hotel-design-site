{
  "tests": [
    {
      "name": "Register new guest",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "email": "test@example.com",
        "password": "testpass123",
        "name": "Test User",
        "phone": "+7 900 123-45-67"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "user": {
          "email": "string"
        },
        "token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login existing guest",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "test@example.com",
        "password": "testpass123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "user": {
          "email": "string"
        },
        "token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reset password",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "reset_password",
        "email": "test@example.com",
        "password": "oldpass",
        "new_password": "newpass456"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "message": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}